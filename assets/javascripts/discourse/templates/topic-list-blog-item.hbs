<div class="post-content">
  {{#if image_url}}
    <img class="teaser" {{bind-attr src="image_url"}} >
  {{/if}}

  <header class="curated-header">
    <h2 class="post-title">
      {{{topic-link this}}}
    </h2>
  </header>
  <p>
    {{{cleanedExcerpt}}}
    // <a href="{{unbound url}}">{{i18n 'read_more'}}</a>
  </p>

  <p>
  </p>
</div>

<div class="post-meta">
  <p>
    {{#if category}}
      <span class="category-title">
        {{i18n 'in'}}
        {{bound-category-link category showParent=false allowUncategorized=true}}
    </span><br>
    {{/if}}
    <a href="{{created_by.usernameUrl}}"
       classNames="trigger-user-card {{classNames}}"
       data-user-card="{{created_by.username}}" class="author">
      {{i18n 'by'}}
      {{avatar this.created_by imageSize="small"}}
      {{created_by.username}}
    </a><br>


    <span class="date">
      {{createdAt}}
    </span>
  </p>
</div>
